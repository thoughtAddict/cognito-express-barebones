<% layout('layout') -%>

<div class="pure-g">
  <div class="formHeader pure-u-1">
    Forgot Password
  </div>
  <div class="messageContainer pure-u-1">
    <%= message %>
  </div>
  <div class="forgotPasswordForm pure-u-1">
    <form name="forgotPasswordForm" id="forgotPasswordForm" action="/forgotPassword" method="POST">
    <div class="pure-g">
      <div class="pure-u-1-2 formRow">
        <div class="usernameLabel floatRight">Username</div>
      </div>
      <div class="pure-u-1-2 formRow">
        <input type="text" name="username" id="username" value=""/>
      </div>
      <div class="pure-u-1 submitButtonContainer">
        <input type="submit" id="submitBtn" value="Submit"/>
      </div>
    </div>
    </form>
  </div>
</div>